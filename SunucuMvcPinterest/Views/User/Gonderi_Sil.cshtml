@model SunucuMvcPinterest.Models.Model.Yayin
@{
    ViewBag.Title = "Gonderi_Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek İstediğinize Emin Misiniz?</h3>

<div style="padding-top:100px" class="container" align="center">

    <div class="form-group">
        <label>Resim Yolu:</label>

        @Html.DisplayFor(model => model.resim_yol)

    </div>

    <div class="form-group">
        <label>İçerik:</label>
        @Html.DisplayFor(model => model.icerik)
    </div>
    <div class="form-group">
        <label>Tarih:</label>
        @Html.DisplayFor(model => model.tarih)
    </div>
    
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sil" class="btn btn-success" />
            </div>
        </div>
    }

</div>